<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.ProductDetailActivity">

    <!-- ScrollView to allow content to be scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ImageView with dark green border -->
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                />

            <!-- Product Name -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="#000080" />

            <!-- Horizontal LinearLayout for Price and Available Quantity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Product Price -->
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price"
                    android:padding="8dp"
                    android:textColor="#8B0000" />

                <!-- Available Quantity -->
                <TextView
                    android:id="@+id/product_total_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Available Quantity"
                    android:padding="8dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:id="@+id/description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp"
                android:textColor="#000000" />

            <!-- Product Description with justification -->
            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description will be displayed here."
                android:padding="8dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="8dp"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/features_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Features :"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp"
                android:textColor="#000000" />
            <!-- Product Features/Observations with justification -->
            <TextView
                android:id="@+id/product_observations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product features or observations will be displayed here."
                android:padding="8dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="8dp"
                android:textColor="#000000" />

            <!-- Button to Add to Cart -->
            <Button
                android:id="@+id/button_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:layout_marginTop="16dp"
                android:background="#22B14C"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
